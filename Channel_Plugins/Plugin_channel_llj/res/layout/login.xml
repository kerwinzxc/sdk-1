<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/y638"
            android:layout_height="@dimen/y481"
            android:layout_gravity="center"
            android:background="@drawable/shape_userl_bg"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y74">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/y21"
                    android:text="@string/wan669_login_userlogin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/y33" />

                <RelativeLayout
                    android:id="@+id/forget_liner_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >

                    <ImageView
                        android:layout_width="@dimen/y33"
                        android:layout_height="@dimen/y33"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/wan_close"
                        android:layout_marginRight="@dimen/y20" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3f3533" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/login_edit_account"
                            android:layout_width="@dimen/y500"
                            android:layout_height="@dimen/y89"
                            android:layout_marginBottom="-1dp"
                            android:layout_marginLeft="@dimen/y21"
                            android:layout_marginRight="@dimen/y19"
                            android:background="@drawable/shape_oval_edit_width"
                            android:hint="@string/wan669_login_name_account_hint"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/y33"
                            android:textColor="@color/wan669_login_edit_word"
                            android:textSize="@dimen/y30"></EditText>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="@dimen/y598"
                            android:layout_height="@dimen/y89"
                            android:layout_marginLeft="@dimen/y21"
                            android:layout_marginRight="@dimen/y19"
                            android:layout_marginTop="-1dp"
                            android:background="@drawable/shape_oval_edit_width2"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/login_edit_pwd"
                                android:layout_width="@dimen/y500"
                                android:layout_height="@dimen/y98"
                                android:layout_marginBottom="-1dp"
                                android:background="@color/WanSDK_transparent"
                                android:hint="@string/wan669_login_password_hint"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/y33"
                                android:textSize="@dimen/y30" />

                            <com.wan669.sdk.utils.SwitchView
                                android:id="@+id/wan_switch"
                                android:layout_width="@dimen/y90"
                                android:layout_height="@dimen/y43"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>


                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/sdk_btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:layout_marginLeft="@dimen/y21"
                android:layout_marginRight="@dimen/y19"
                android:layout_marginTop="@dimen/y27"
                android:background="@drawable/selector_button_login"
                android:gravity="center"
                android:onClick="finish_login"
                android:text="@string/sdk_login"
                android:textColor="#ffffff"
                android:textSize="@dimen/y30" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y89"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/login_text_change_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/y21"
                    android:gravity="center"
                    android:text="@string/forget_hint_forget_title"
                    android:textColor="#b8bab9"
                    android:textSize="@dimen/y24" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/y19"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/wam669_login_resgister"
                    android:textColor="#b8bab9"
                    android:textSize="@dimen/y24" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_account_rerutn"
            android:layout_width="@dimen/y250"
            android:layout_height="@dimen/y96"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginRight="@dimen/y60"
            android:background="@drawable/shape_oval_luner_btn"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/y66"
                    android:layout_height="@dimen/y66"
                    android:layout_marginLeft="@dimen/y24"
                    android:src="@drawable/icon_recycle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y20"
                    android:layout_marginRight="@dimen/y4"
                    android:textColor="@color/wan669_btn_white" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>