<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_exit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/WanSDK_transparent">

    <LinearLayout
        android:id="@+id/item_exitPop"
        android:layout_width="@dimen/y604"
        android:layout_height="@dimen/y524"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_userl_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y25"
            android:layout_marginTop="@dimen/y36"
            android:gravity="left"
            android:text="@string/wan669_finish_exitpop"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y36" />

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y275"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginLeft="@dimen/y25"
            android:layout_marginRight="@dimen/y25"
            android:layout_marginTop="@dimen/y21"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/y25"
            android:layout_marginRight="@dimen/y25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/itm_exit_btn_cancel"
                android:layout_width="@dimen/y260"
                android:layout_height="@dimen/y87"
                android:background="@drawable/wan_selector_finish_cancel" />

            <Button
                android:id="@+id/itm_exit_btn_exit"
                android:layout_width="@dimen/y260"
                android:layout_height="@dimen/y87"
                android:layout_marginLeft="@dimen/y36"
                android:background="@drawable/wan_selector_finish_okl" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>