<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/y550"
        android:layout_height="@dimen/y229"
        android:background="@drawable/shape_exit_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_txtPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginTop="@dimen/y51"
            android:gravity="center|center_horizontal"
            android:text="@string/wan669_prompt_error_tip"
            android:textColor="@color/wan669_prompt_text"
            android:textSize="@dimen/y30"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wan669_prompt_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y91"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txtConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/wan669_prompt_confirm"
                android:textColor="@color/wan669_accent_color"
                android:textSize="@dimen/y30"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>