<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xy_corner_background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/xy_corner_background_above">

        <ImageView
            android:id="@+id/pj_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xy_background_web_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/pj_image_title_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/main_background_color" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/pj_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xy_corner_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/pj_login_username_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/pj_background_input"
                android:drawableLeft="@drawable/xy_image_icon_username"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="请输入用户名/手机号/邮箱"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pj_login_password_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/pj_background_input"
                android:drawableLeft="@drawable/xy_image_icon_password"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="请输入登录密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <Button
                android:id="@+id/pj_login_do_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/xy_button_bg"
                android:text="@string/login"
                android:textColor="#fff"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/pj_btn_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:text="@string/reg_account"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pj_login_forget_pwd_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="50dp"
                    android:text="@string/forget_password"
                    android:textColor="#999999"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>