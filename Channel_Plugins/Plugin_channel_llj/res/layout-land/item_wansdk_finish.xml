<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_exit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/WanSDK_transparent">

    <LinearLayout
        android:id="@+id/item_exitPop"
        android:layout_width="302.5dp"
        android:layout_height="262.5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_userl_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:gravity="left"
            android:text="@string/wan669_finish_exitpop"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y36" />

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="11dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/itm_exit_btn_cancel"
                android:layout_width="130.5dp"
                android:layout_height="44dp"
                android:background="@drawable/wan_selector_finish_cancel" />

            <Button
                android:id="@+id/itm_exit_btn_exit"
                android:layout_width="130.5dp"
                android:layout_height="44dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/wan_selector_finish_okl" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>