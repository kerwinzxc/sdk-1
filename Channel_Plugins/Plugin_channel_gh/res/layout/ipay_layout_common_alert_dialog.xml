<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="400dp" android:layout_height="250dp" android:background="@drawable/ipay_bg">
    
    <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="377dp" android:layout_marginTop="5dp"  android:src="@drawable/recharge_close" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/ipay_margin_20" android:gravity="center" android:minHeight="@dimen/ipay_height_34">
            <TextView android:id="@+id/tv_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="确认支付方式" android:textColor="@color/ipay_color_value_6" android:textSize="@dimen/ipay_margin_15" />
        </LinearLayout>
        
        <View android:layout_width="fill_parent" android:layout_height="@dimen/ipay_divid_line_h" android:background="@color/ipay_color_value_4_1" />
        
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/ipay_margin_10" android:gravity="center">
            <TextView android:id="@+id/tv_msg1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="20000元宝" android:textColor="@color/ipay_color_value_6" android:textSize="@dimen/ipay_margin_10" />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center">
            <TextView android:id="@+id/tv_msg2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="￥200" android:textColor="@color/ipay_color_value_6" android:textSize="@dimen/ipay_margin_10" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ipay_margin_10"
            android:gravity="center" >
            <ImageView android:id="@+id/alipay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/ipay_margin_10" android:src="@drawable/recharge_ali" />
            <ImageView android:id="@+id/wechat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/ipay_margin_10" android:src="@drawable/recharge_wechat" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>