<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_edge_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fload_edge" />

    <ImageView
        android:id="@+id/iv_edge_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fload_edge_b" />

    <ImageView
        android:id="@+id/iv_edge_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fload_edge_r" />

    <ImageView
        android:id="@+id/iv_edge_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fload_edge_t" />

</RelativeLayout>
