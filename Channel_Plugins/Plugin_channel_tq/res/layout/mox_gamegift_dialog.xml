<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dip"
    android:background="@drawable/mox_giftdialog_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
     >
    
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:textColor="#0bd09f"
       android:textStyle="bold"
       android:gravity="left"
       android:layout_marginLeft="15dip"
       android:text="提示"
       />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/mox_gamegift_dialog_line"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        />
    
    	<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="60dip"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal"
            >
           <TextView 
	       	   android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginLeft="6dip"
               android:textColor="@android:color/white"
               android:gravity="center_vertical"
               android:textSize="14sp"
               android:text="激活码："
        	/>
           <TextView
               android:id="@+id/tv_gamegift_code"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@android:color/white"
               android:gravity="center_vertical"
               android:textSize="14sp"
               android:text="ttw688888888"
              />
       </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#c3060c"
        android:gravity="left"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:text="立即下载游戏激活礼包"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/mox_giftdialog_bg"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        >
        <View 
            android:id="@+id/v_line"
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="@drawable/mox_giftdialog_top"
	        android:layout_marginTop="8dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
        />
        <LinearLayout
            android:layout_below="@id/v_line" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
           <TextView
               android:id="@+id/tv_copy_code"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginLeft="6dip"
               android:background="@drawable/mox_giftdialog_bg"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="14sp"
               android:textColor="@android:color/white"
               android:text="复      制"
              />
           <View 
            android:id="@+id/v_cont"
	        android:layout_width="2dip"
	        android:layout_height="match_parent"
	        android:background="@drawable/mox_giftdialog_left"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:layout_marginTop="8dip"
	        android:layout_marginBottom="8dip"
	        android:layout_marginLeft="35dip"
	        android:layout_marginRight="35dip"
        	/>
           <TextView
               android:id="@+id/tv_download"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/mox_giftdialog_bg"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="14sp"
               android:textColor="@android:color/white"
               android:text="立即下载"
              />
       </LinearLayout>
       
    </RelativeLayout>
    
</LinearLayout>
