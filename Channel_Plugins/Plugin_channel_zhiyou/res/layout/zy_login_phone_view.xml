<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@drawable/zy_login_bg_shape"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/zy_login_box_bg"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edt_loginPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/zy_text_margin_left_right"
            android:background="@null"
            android:ems="11"
            android:hint="@string/zy_hint_login_input_phone"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/zy_edt_input_color"
            android:textColorHint="@color/zy_hint_edt_color"
            android:textSize="@dimen/zy_edit_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/zy_text_margin_left_right"
            android:layout_marginRight="@dimen/zy_text_margin_left_right"
            android:background="@color/zy_color_login_box_gb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_loginPhoneVerify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/zy_text_margin_left_right"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/zy_hint_login_phone_verify"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/zy_edt_input_color"
                android:textColorHint="@color/zy_hint_edt_color"
                android:textSize="@dimen/zy_edit_text_size"/>


            <Button
                android:id="@+id/btn_phoneResendVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginRight="@dimen/zy_login_padding_left_right"
                android:background="@drawable/zy_get_code_btn_bg_normal"
                android:text="获取验证码"
                android:textColor="@color/zy_white"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/zy_color_login_box_gb"/>

        <EditText
            android:id="@+id/edt_loginPhonePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/zy_text_margin_left_right"
            android:background="@null"
            android:hint="@string/zy_hint_login_user_password"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:maxLength="20"
            android:minEms="6"
            android:singleLine="true"
            android:textColor="@color/zy_edt_input_color"
            android:textColorHint="@color/zy_hint_edt_color"
            android:textSize="@dimen/zy_edit_text_size"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_loginPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/zy_select_common_btn"
        android:text="注册登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/zy_title_btn_text_size"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/zy_warm_prompt"
        android:textColor="@color/zy_edt_input_color"
        android:textSize="12sp"/>

</LinearLayout>