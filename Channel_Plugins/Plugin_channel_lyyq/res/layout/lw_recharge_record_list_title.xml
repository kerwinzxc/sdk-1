<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="@color/lw_recharge_record_title_bg"
    android:weightSum="1" >

    <TextView
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.25"
        android:text="@string/lw_order_num"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />
	<View android:layout_width="0.5dp"
	     android:layout_height="45dp"
	     android:background="@android:color/white"
	    />
    <TextView
        android:id="@+id/game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_gravity="center"
        android:text="@string/lw_game_name2"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <View android:layout_width="0.5dp"
	     android:layout_height="45dp"
	     android:background="@android:color/white"
	    />
    <TextView
        android:id="@+id/pay_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.27"
        android:text="@string/lw_pay_money"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <View android:layout_width="0.5dp"
	     android:layout_height="45dp"
	     android:background="@android:color/white"
	    />
    <TextView
        android:id="@+id/pay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:text="@string/lw_pay_time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black" />

</LinearLayout>