<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/lw_title_bg"
    android:layout_height="@dimen/lw_title_bg_height_size"
>

    <ImageButton
        android:id="@+id/back_bt"
        android:layout_width="40dp"
        android:layout_height="@dimen/lw_title_button_height_size"
        android:layout_centerVertical="true"
        android:src="@drawable/lw_back"
        android:contentDescription="@string/back"
       	android:scaleType="center"
        android:background="@null"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/lw_second_view_titile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/title_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lw_title_button_height_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:visibility="invisible"
         />
</RelativeLayout>
