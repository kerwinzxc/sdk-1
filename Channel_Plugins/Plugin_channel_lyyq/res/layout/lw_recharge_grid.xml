<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/lw_comer_white_bg"
    android:minHeight="80dp"
     >

    <ImageView
        android:id="@+id/lw_pay_icon_ig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:contentDescription="@string/lw_img_content_description"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lw_margin_right"
        android:layout_marginLeft="@dimen/lw_margin_right"
        android:layout_toRightOf="@+id/lw_pay_icon_ig"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lw_pay_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lw_pay_type_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5E5E5E"
            android:textSize="@dimen/lw_small_font_size" />
    </LinearLayout>

</RelativeLayout>