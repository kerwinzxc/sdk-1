<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.KxwResetFailActivity">

    <RelativeLayout
        android:id="@+id/kxw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/kxw_iv_wrong"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/kxw_wrong"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/kxw_tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fail_reset_pwd"
            android:textSize="21sp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/kxw_iv_wrong"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dip"
        android:layout_marginRight="@dimen/ten_dip"
        android:layout_marginTop="60dp"
        android:text="@string/fail_reset_pwd_part"
        android:textSize="12sp"
        android:textColor="@color/textColorGray"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/kxw_btn_sure"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@color/colorGreen"
        android:text="@string/btn_sure"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"/>

</LinearLayout>
