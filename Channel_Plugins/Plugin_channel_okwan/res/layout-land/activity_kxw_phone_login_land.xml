<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/land_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/kxw_round"
    android:layout_marginBottom="@dimen/land_marginBottom"
    android:layout_marginTop="@dimen/land_marginTop"
    tools:context=".activity.KxwPhoneLoginActivity">

    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="46dp"
	    android:background="@drawable/kxw_toolbar">

	    <ImageView
	        android:id="@+id/kxw_iv_back"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="6dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/kxw_back_to"
	        android:clickable="true"/>
	
	    <TextView
	        android:id="@+id/kxw_tv_phone_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="@string/phone_login"
	        android:textSize="18sp"
	        android:textColor="@color/colorBlack"/>
	</RelativeLayout>

    <LinearLayout
        android:id="@+id/kxw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ten_dip"
        android:paddingRight="@dimen/ten_dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_login_part1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/kxw_tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/protocolColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_login_part2"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/kxw_round">

        <Button
            android:id="@+id/kxw_btn_seconds"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/kxw_sbg"
            android:text="@string/seconds"
            android:textColor="@color/textColorGray"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/kxw_et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="@string/input_code"
            android:textColor="@color/textColorGray"
            android:textSize="15sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:inputType="text"/>
    </RelativeLayout>

    <Button
        android:id="@+id/kxw_btn_startgame"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/kxw_button"
        android:text="@string/comein_game"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"/>

</LinearLayout>
