<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000" >
	
    <RelativeLayout
        android:id="@+id/ll_quick_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible" >
     
            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/mgsdk_sdk_spalns_login"
                android:orientation="vertical"
                >
                <RelativeLayout
			        android:layout_width="220dip"
			        android:layout_height="45dip"
			        android:layout_marginTop="5dp"
			        android:background="@drawable/mgsdk_sdk_spalns_login"
			        android:visibility="visible" >

			
			        <ImageView
			            android:id="@+id/iv_loadingtu"
			            android:layout_width="36dp"
			            android:layout_height="36dp"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="50dp"
			            android:background="@drawable/mgsdk_xs_loading"
			            android:gravity="center" />

			        <TextView
			            android:id="@+id/tv_tip"
			            android:layout_width="wrap_content"
			            android:layout_height="26dip"
			            android:layout_alignBottom="@+id/iv_loadingtu"
			            android:layout_marginLeft="14dp"
			            android:layout_toRightOf="@+id/iv_loadingtu"
			            android:gravity="center"
			            android:text="正在登录"
			            android:textColor="@android:color/white"
			            android:textSize="15dip" />
			
			    </RelativeLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:gravity="center"
				    android:layout_marginBottom="10dp"
				    >
                <TextView
                    android:id="@+id/tv_quick_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tttssssaa"
                  
                    
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="80dp"
                    android:textSize="15dip"
                    android:textColor="#ff6905" />
                
				<TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textSize="15dip"
                    android:textColor="#ff6905" />
				
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="欢迎回来"
                    android:textSize="15dip"
                    android:textColor="#ff6905" />
                </LinearLayout>
                
	               <TextView 
	                   android:layout_width="match_parent"
	                   android:layout_height="1dp"
	                   android:background="#676767"
	                   />
	               
	                <TextView
	                    android:id="@+id/tv_cut_login"
	                    android:background="@drawable/mgsdk_sdk_spalns_login"
	                    android:layout_width="match_parent"
	                    android:layout_height="40dp"
	                    android:gravity="center"
	                    android:text="切换账号"
	                    android:textColor="@android:color/white"
	                    android:textSize="15sp" />
            </LinearLayout>
            
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="fill_parent"
        android:layout_height="275dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/mgsdk_sdk_edit_one_bg"
        android:paddingBottom="10dip"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="0.0px"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0"
                android:src="@drawable/mgsdk_logo" />

            <TextView
                android:layout_width="1dip"
                android:layout_height="40dp"
                android:background="@color/mgsdk_gray5" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0.0px"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="用户登录"
                android:textColor="@color/mgsdk_blues"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_frame"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="72dp"
            android:layout_below="@id/ll_logo"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rl_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/iv_icon_phone_login" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mgsdk_icon_user"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_icon_phone_login"
                    android:background="@null"
                    android:hint="请输入用户名/手机号码"
                    android:paddingLeft="5dip"
                    android:paddingRight="30dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#c8c8c8"
                                        android:layout_weight="1"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/iv_userselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/et_username"
                    android:focusable="true"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:scaleType="center"
                    android:src="@drawable/mgsdk_xs_login_up" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mgsdk_blue_btn" />

            <LinearLayout
                android:id="@+id/rl_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_username"
                android:layout_marginTop="15dp"
                         android:paddingBottom="5dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal"
                >

                                <ImageView
                    android:id="@+id/iv_icon_lock_login" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mgsdk_icon_lock"
                    android:layout_alignParentLeft="true"
                    />
                
                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入游戏密码"
                    android:paddingLeft="5dip"
                    android:paddingRight="65dip"
                    android:password="true"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#818181"
                    android:textColorHint="#c8c8c8"
                    android:layout_weight="1"
                    android:textSize="15dip" />

                <Button
                    android:id="@+id/btn_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ff6905"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="忘记密码 ?"
                    android:textSize="15sp" />


            </LinearLayout>
            
               <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mgsdk_blue_btn" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_login_frame"
            android:layout_marginTop="10dp" >

           
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/mgsdk_sdk_login_in"
                        android:gravity="center"
                        android:text="进入游戏"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dip" />
                    
                    
                                   <Button
                        android:id="@+id/btn_phoneRegister"
                        android:layout_width="match_parent"
                        android:layout_below="@id/btn_login"
                        android:layout_height="40dip"
                        android:background="@drawable/mgsdk_sdk_phonelogin_in"
                        android:gravity="center"
                        android:text="手机号一键注册"
                        android:textColor="@android:color/white"
                        android:textSize="16dip" />
                    
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/rl_login_register" >
            
        <TextView
            android:id="@+id/tv_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="游客登录"
            android:textColor="@color/mgsdk_blues"
            android:textSize="14dip" />

        
       </LinearLayout>
        

        
        <LinearLayout
            android:id="@+id/ll_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_login_register" >
            
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="用户名注册"
            android:textColor="@color/mgsdk_blues"
            android:textSize="14dip" />

        
       </LinearLayout>
        

    </RelativeLayout>

</RelativeLayout>