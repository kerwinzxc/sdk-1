<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gmsdk_action_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/gmsdk_base_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gmsdk_menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/gmsdk_ic_back" />

    <TextView
        android:id="@+id/gmsdk_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题正文"
        android:textColor="@color/gmsdk_white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/gmsdk_menu_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/gmsdk_menu_close" />

</RelativeLayout>