<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/gmsdk_base_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gmsdk_menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/gmsdk_ic_back" />

    <TextView
        android:id="@+id/gmsdk_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gmsdk_menu_back"
        android:layout_toEndOf="@+id/gmsdk_menu_back"
        android:layout_toRightOf="@+id/gmsdk_menu_back"
        android:text="标题正文"
        android:textColor="@color/gmsdk_white"
        android:textSize="20sp" />

</RelativeLayout>