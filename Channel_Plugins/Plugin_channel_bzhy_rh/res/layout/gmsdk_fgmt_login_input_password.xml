<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gmsdk_base_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/gmsdk_action_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gmsdk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号 15155665209 已经注册"
                android:textColor="@color/gmsdk_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/gmsdk_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="32" />


            </LinearLayout>

            <TextView
                android:id="@+id/gmsdk_sms_valid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="验证码登录"
                android:textColor="@color/gmsdk_link_font" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gmsdk_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:background="@drawable/gmsdk_btn_default"
        android:text="完成"
        android:textColor="@color/gmsdk_white" />

</RelativeLayout>