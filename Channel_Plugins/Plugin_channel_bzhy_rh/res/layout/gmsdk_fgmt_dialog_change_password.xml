<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gmsdk_cover">

    <RelativeLayout
        android:id="@+id/gmsdk_outbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/gmsdk_inbox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_popup_panel_holo_dark"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="修改密码"
                android:textColor="@color/gmsdk_white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/gmsdk_msg"
                android:text="提示信息"
                android:textColor="@android:color/holo_red_dark" />

            <EditText
                android:id="@+id/gmsdk_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/gmsdk_white"
                android:textColorHint="@color/gmsdk_font" />

            <EditText
                android:id="@+id/gmsdk_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/gmsdk_white"
                android:textColorHint="@color/gmsdk_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gmsdk_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gmsdk_btn_default"
                    android:text="取消"
                    android:textColor="@color/gmsdk_white" />

                <Button
                    android:id="@+id/gmsdk_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gmsdk_btn_default"
                    android:text="确定"
                    android:textColor="@color/gmsdk_white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
