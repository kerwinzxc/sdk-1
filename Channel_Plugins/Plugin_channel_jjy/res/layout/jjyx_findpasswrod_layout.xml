<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:alpha="0.5"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:id="@+id/line1_login_an_jjyx"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/jjyx_dr_white_corners"
        android:layout_width="330dp"
        android:layout_height="wrap_content">


        <!--头部-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_findpass_back_jjyx"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_fanhui_jjyx"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

                <Space android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/image_findpass_close_jjyx"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_guangbi_jjyx"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="-20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_jjyx"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <!--用户框-->
        <LinearLayout
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">



            <com.gamesdk.jjyx.view.PhoneEditText
                android:inputType="phone"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:hint="手机号码"
                android:id="@+id/et_findpass_phone_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>


        <!--密码-->
        <LinearLayout
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">



            <EditText
                android:inputType="number"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:hint="请输入验证码"
                android:id="@+id/et_findpass_code_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View android:background="#8a000000"
                android:layout_width="1px"
                android:layout_height="35dp"/>

            <TextView
                android:enabled="false"
                android:textColor="@color/jjyx_color_enabled"
                android:id="@+id/tv_findpass_getcode_jjyx"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />



        </LinearLayout>



            <Button
                android:layout_marginTop="8dp"
                android:enabled="false"
                android:layout_weight="1"
                android:background="@drawable/jjyx_button_quicklogin"
                android:textColor="@android:color/white"
                android:id="@+id/bt_findpass_ok_jjyx"
                android:text="确定"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        <LinearLayout
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        <TextView
            android:text="提示:如游戏账号未绑定手机请：  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="6dp"
            android:id="@+id/tv_findpass_calls_jjyx"
            android:text="联系客服"
            android:textColor="#2CA7F2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>