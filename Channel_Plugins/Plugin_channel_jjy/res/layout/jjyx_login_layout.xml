<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:alpha="0.5"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:id="@+id/line1_login_an_jjyx"
        android:padding="10dp"
        android:background="@drawable/jjyx_dr_white_corners"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <!--头部-->
        <RelativeLayout
            android:id="@+id/rela_login"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/image_login_close_jjyx"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_guangbi_jjyx"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="-20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_jjyx"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <!--密码-->
        <LinearLayout
            android:id="@+id/liear_login_pass"
            android:layout_below="@+id/liear_login_user"
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:scaleType="centerInside"
                android:src="@drawable/ic_mima_jjyx"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:inputType="textPassword"
                android:hint="请输入登录密码"
                android:id="@+id/et_login_passwrod_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/image_login_passopen_jjyx"
                android:src="@drawable/jjyx_mima_selector"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/liear_login_button"
            android:layout_below="@+id/liear_login_pass"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <Button
                android:layout_weight="1"
                android:background="@drawable/jjyx_button_quicklogin"
                android:textColor="@android:color/white"
                android:id="@+id/bt_login_regiter_jjyx"
                android:text="快速注册"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="50dp"
                android:layout_height="1dp" />

            <Button
                android:enabled="false"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:id="@+id/bt_login_gologin_jjyx"
                android:text="立即登录"
                android:background="@drawable/jjyx_button_gologin"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/liear_login_button"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/tv_login_trygame_jjyx"
                android:text="游客一键登录 >"
                android:textColor="#2CA7F2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp" />


            <TextView
                android:layout_marginRight="6dp"
                android:id="@+id/tv_login_findview_jjyx"
                android:text="找回密码"
                android:textColor="#2CA7F2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!--用户列表-->
        <LinearLayout
            android:padding="6dp"
            android:visibility="gone"
            android:id="@+id/linear_login_userlist_jjyx"
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/liear_login_user"
            android:background="@drawable/jjyx_dr_white_corners5_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_marginTop="20dp"
                android:dividerHeight="0dp"
                android:divider="@null"
                android:scrollbars="none"
                android:id="@+id/listv_login_userlist_jjyx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>


        <!--用户框-->
        <LinearLayout
            android:id="@+id/liear_login_user"
            android:layout_below="@+id/rela_login"
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/image_login_usertypeion_jjyx"
                android:scaleType="centerInside"
                android:src="@drawable/ic_zhanghu_jjyx"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <!--android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"-->
            <com.gamesdk.jjyx.view.PhoneEditText
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textEmailAddress"
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:hint="请输入普通账号/手机号"
                android:id="@+id/et_login_name_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <ImageView
                android:visibility="gone"
                android:id="@+id/image_login_clear_jjyx"
                android:src="@drawable/ic_quanshan_jjyx"
                android:layout_marginRight="6dp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image_login_showlist_jjyx"
                android:src="@drawable/jjyx_xiala_selector"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>