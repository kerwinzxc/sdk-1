<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:alpha="0.5"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:id="@+id/line1_userup_an_jjyx"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/jjyx_dr_white_corners"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <!--头部-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_userup_back_jjyx"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_fanhui_jjyx"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

                <Space android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/image_userup_close_jjyx"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_guangbi_jjyx"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="-20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_jjyx"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <!--用户框-->
        <LinearLayout
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:scaleType="centerInside"
                android:src="@drawable/ic_zhanghu_jjyx"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textEmailAddress"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:hint="账号：6-20个字母数字组合"
                android:id="@+id/et_userup_name_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/image_userup_clear_jjyx"
                android:src="@drawable/ic_quanshan_jjyx"
                android:layout_marginRight="6dp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />


        </LinearLayout>


        <!--密码-->
        <LinearLayout
            android:background="@drawable/jjyx_dr_white_corners45_stroke"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:scaleType="centerInside"
                android:src="@drawable/ic_mima_jjyx"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:hint="密码：6-20个字符组合"
                android:id="@+id/et_userup_passwrod_jjyx"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/image_userup_openpassword_jjyx"
                android:src="@drawable/jjyx_mima_selector"
                android:layout_marginRight="6dp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/iamge_userup_chebox_jjyx"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jjyx_xieyi_selector"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tv_userup_chebox_jjyx"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="久久游用户服务协议"
                    android:textColor="@color/jjyx_color_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:layout_marginTop="4dp"
                android:enabled="false"
                android:layout_weight="1"
                android:background="@drawable/jjyx_button_quicklogin"
                android:textColor="@android:color/white"
                android:id="@+id/bt_userup_go_jjyx"
                android:text="完成升级"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>



            <TextView
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_userup_gophonelogin_jjyx"
                android:text="手机升级"
                android:textColor="#2CA7F2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>